.container {
  padding: 20rpx;
  min-height: 100vh; /* 确保页面至少占满整个视口 */
}

.title {
  font-size: 36rpx; /* 标题字体大小 */
  font-weight: bold; /* 加粗 */
  color: rgb(14, 13, 13); /* 颜色 */
  margin-bottom: 20rpx; /* 与内容的间距 */
  margin: 20rpx auto; /* 上下间距，左右自动居中 */
  text-align: center; /* 居中对齐 */
}

.content-box {
  background-color: rgba(255, 255, 255, 0.8); /* 白色背景，带透明度 */
  border-radius: 10rpx; /* 圆角 */
  padding: 40rpx; /* 内边距 */
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1); /* 阴影效果 */
  margin: 20rpx 0; /* 上下间距 */
  max-width: 80%; /* 设置最大宽度为 80% */
}

.custom-text {
  font-size: 36rpx; /* 内容字体大小 */
  color: #333; /* 颜色 */
  line-height: 1.5; /* 行高 */
  margin-bottom: 40rpx; /* 与按钮的间距 */
}